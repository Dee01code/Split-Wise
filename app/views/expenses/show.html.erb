<table>
	<tr>
		<td>
			Description:
		</td>
		<td>
			<%= @expense.description %>
		</td>
	</tr>

	<tr>
		<td>
			Amount:
		</td>
		<td>
			<%= @expense.amount %>
		</td>
	</tr>

	<tr>
		<td>
			Expense Type:
		</td>
		<td>
			<%= @expense.expense_type %>
		</td>
	</tr>

	<tr>
		<td>
			Bill Paid By:
		</td>
		<td>
			<%= @payer_name %>
		</td>
	</tr>
	
	<tr>
		<td>
			Split Between:
		</td>
		<td>
			<ol>
				<% @expense.users.each do |user| %>

						<% unless user.id.equal?@payer_id %>

							<% if current_user.id == user.id %>
								<li>
									<%= "You -> #{@payer_name} : #{@transactions.where(receiver: user.id).pluck(:amount)}" %>
								</li>
							<%elsif current_user.id == @payer_id%>
								<li>
									<%= "#{user.name} -> You : #{@transactions.where(receiver: user.id).pluck(:amount)}" %>
								</li>
							<%else%>
								<li>
									<%= "#{user.name} -> #{@payer_name} : #{@transactions.where(receiver: user.id).pluck(:amount)}" %>
								</li>
							<%end%>

            <%end%>

				<% end %>
			</ol>
		</td>
	</tr>

</table>